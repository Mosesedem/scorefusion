{
  "expo": {
    "name": "Score Fusion",
    "slug": "scorefusion-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "scorefusion",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.scorefusion.app",
      "icon": "./assets/images/ios/AppIcon~ios-marketing.png"
    },
    "android": {
      "package": "com.scorefusion.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android/res/mipmap-mdpi/ic_launcher_foreground.png",
        "backgroundImage": "./assets/images/android/res/mipmap-mdpi/ic_launcher_background.png"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
